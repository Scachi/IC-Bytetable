<?xml version="1.0" encoding="UTF-8" ?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

<!-- ################### keywords ################### -->
<xs:element name="standard" use="required">
  <xs:complexType>
    <xs:sequence>
        <xs:element name="title"        type="xs:string" use="required"/>
        <xs:element name="group"        type="xs:string" minOccurs="0"/>
        <xs:element name="groupcol"     type="xs:string" minOccurs="0"/>
        <xs:element name="color"        type="xs:string" minOccurs="0"/>
        <xs:element name="shortdesc"    type="xs:string" minOccurs="0"/>
    </xs:sequence>
  </xs:complexType>
</xs:element>

<xs:element name="byteoffset"   type="xs:string" use="required"/>
<xs:element name="bitoffset"    type="xs:string" use="required"/>
<xs:element name="bitsize"      type="xs:string" use="required"/>
<xs:element name="control"      type="xs:string" use="required"/>
<xs:element name="default"      type="xs:string" use="required"/>
<xs:element name="decimals"     type="xs:string" use="required"/>
<xs:element name="item"         type="xs:string" maxOccurs="unbounded" use="required"/>

<xs:element name="limits" use="required">
  <xs:complexType>
    <xs:sequence>
        <xs:element name="minimum" type="xs:string" use="required"/>
        <xs:element name="maximum" type="xs:string" use="required"/>
    </xs:sequence>
  </xs:complexType>
</xs:element>
<xs:element name="step" type="xs:string" use="required"/>


<!-- ################### controls and their keywords ################### -->
<xs:element name="info">
  <xs:complexType>
    <xs:sequence>
      <xs:element ref="standard"/>
    </xs:sequence>
  </xs:complexType>
</xs:element>

</xs:schema>


